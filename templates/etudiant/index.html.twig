{% extends 'base.html.twig' %}

{% block title %}Créer un Étudiant
{% endblock %}

{% block body %}
	<div class="flex justify-center mt-10">
		<div class="w-full max-w-md bg-white p-8 rounded-lg shadow-md">
			<h1 class="text-2xl font-semibold text-center text-red-600 mb-6">
				{{ etudiant.id ? 'Modifier' : 'Créer' }}
				un Étudiant</h1>

			<form method="post" action="{{ etudiant.id ? path('etudiant_edit', {id: etudiant.id}) : path('etudiants') }}" class="space-y-4">

				<div class="mb-4">
					<label for="nom" class="block text-gray-700">Nom</label>
					<input type="text" id="nom" name="nom" value="{{ etudiant.nom }}" class="mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-red-600 focus:ring-red-600">
					{% if error.nom is defined %}
						<p class="text-red-500 text-xs italic mt-2">{{ error.nom }}</p>
					{% endif %}
				</div>

				<div class="mb-4">
					<label for="prenom" class="block text-gray-700">Prénom</label>
					<input type="text" id="prenom" name="prenom" value="{{ etudiant.prenom}}" class="mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-red-600 focus:ring-red-600">
					{% if error.prenom is defined %}
						<p class="text-red-500 text-xs italic mt-2">{{ error.prenom }}</p>
					{% endif %}
				</div>

				<div>
					<label for="dateNaissance">Date de Naissance:</label>
					<input type="date" id="dateNaissance" name="dateNaissance" value="{{ etudiant.dateNaissance ? etudiant.dateNaissance|date('Y-m-d') : '' }}">
					{% if error.dateNaissance is defined %}
						<div class="error text-red-500 text-xs italic mt-2">{{ error.dateNaissance }}</div>
					{% endif %}
				</div>

				<div class="mb-4">
					<label for="adresse" class="block text-gray-700">Adresse</label>
					<input type="text" id="adresse" name="adresse" value="{{ etudiant.adresse }}" class="mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-red-600 focus:ring-red-600">
					{% if error.adresse is defined %}
						<p class="text-red-500 text-xs italic mt-2">{{ error.adresse }}</p>
					{% endif %}
				</div>

				<div class="text-center mt-6">
					<button type="submit" class="w-full py-2 px-4 bg-red-600 text-white rounded-md font-semibold hover:bg-red-700 transition-colors">
						{{ etudiant.id ? 'Modifier letudiant' : 'Ajouter un etudiant' }}
					</button>
				</div>
			</form>
		</div>
	</div>
{% endblock %}
