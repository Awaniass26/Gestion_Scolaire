{% extends 'base.html.twig' %}

{% block title %}Gestion des Étudiants
{% endblock %}

{% block body %}
	<div class="flex justify-center mt-10">

		<div class="flex flex-col items-center mt-10">
			<h1 class="text-2xl font-semibold text-red-600 mb-6">Liste des Étudiants</h1>

			<div class="w-full max-w-4xl">
				<div class="bg-white shadow-md rounded-lg overflow-hidden">
					<table class="min-w-full bg-white">
						<thead class="bg-red-600 text-white">
							<tr>
								<th class="py-3 px-4 text-left">Nom</th>
								<th class="py-3 px-4 text-left">Prénom</th>
								<th class="py-3 px-4 text-left">Date de Naissance</th>
								<th class="py-3 px-4 text-left">Adresse</th>
								<th class="py-3 px-4 text-left">Actions</th>
							</tr>
						</thead>
						<tbody>
							{% for etudiant in etudiants %}
								<tr class="border-b">
									<td class="py-3 px-4 text-center">{{ etudiant.nom }}</td>
									<td class="py-3 px-4 text-center">{{ etudiant.prenom }}</td>
									<td class="py-3 px-4 text-center">{{ etudiant.dateNaissance|date('d/m/Y') }}</td>
									<td class="py-3 px-4 text-center">{{ etudiant.adresse }}</td>
									<td class="py-3 px-4 text-center">
										<a href="{{ path('etudiant_edit', {'id': etudiant.id}) }}" class="text-blue-600 hover:text-blue-800">
											<i class="fas fa-edit"></i>
										</a>
										<a href="{{ path('etudiant_delete', {'id': etudiant.id}) }}" class="text-red-600 hover:text-red-800" onclick="return confirm('Are you sure?');">
											<i class="fas fa-trash-alt"></i>
										</a>
									</td>
								</tr>
							{% else %}
								<tr>
									<td colspan="5" class="py-4 text-center text-gray-600">Aucun étudiant trouvé.</td>
								</tr>
							{% endfor %}
						</tbody>
					</table>

					<div class="mt-4">
						{{ knp_pagination_render(etudiants) }}
					</div>
				</div>
			</div>
		</div>
	{% endblock %}
